// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ciudad {
  ciudadId Int     @id @default(autoincrement())
  nombre   String  @unique
  fields   Field[]
}

model Field {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique
  descripcion String?   @db.VarChar(300)
  precio      Float
  reservada   Boolean   @default(false)
  deporte     Deportes
  valoracion  Float?
  url         String
  servicios   String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  ciudad      Ciudad    @relation(fields: [ciudadId], references: [ciudadId])
  ciudadId    Int
  horarios    Horario[]
}

model Horario {
  id         Int       @id @default(autoincrement())
  horaInicio String
  horaFin    String
  diaSemana  DiaSemana
  field      Field     @relation(fields: [fieldId], references: [id])
  fieldId    Int
}

enum Deportes {
  futbol
  tenis
  basquet
}

enum DiaSemana {
  lunes
  martes
  miercoles
  jueves
  viernes
  sabado
  domingo
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  phone    String
  username String?
  password String
  role     UserRole @default(Client)
}

enum UserRole {
  Client
  Owner
  Admin
}
