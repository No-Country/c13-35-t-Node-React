// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String?
  email    String   @unique
  phone    String?
  username String?
  password String
  role     UserRole @default(Client)
}

enum UserRole {
  Client
  Owner
  Admin
}
